<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/parking_lot_1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parking_lot_1_text"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/parking_lot_2_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parking_lot_2_text"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/parking_lot_1_textview" />

        <TextView
            android:id="@+id/parking_lot_3_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parking_lot_3_text"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/parking_lot_2_textview" />

        <TextView
            android:id="@+id/parking_lot_1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@+id/parking_lot_1_textview"
            android:layout_marginLeft="153dp" />

        <TextView
            android:id="@+id/parking_lot_2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/parking_lot_1_value"
            app:layout_constraintLeft_toRightOf="@+id/parking_lot_2_textview"
            android:layout_marginLeft="101dp" />

        <TextView
            android:id="@+id/parking_lot_3_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/parking_lot_2_value"
            app:layout_constraintLeft_toRightOf="@+id/parking_lot_3_textview"
            android:layout_marginLeft="101dp" />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>