<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/lot3"
            android:layout_width="329dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_buttons"
            android:text="@string/parking_lot_3_text"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/lot2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.509" />

        <Button
            android:id="@+id/lot2"
            android:layout_width="329dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_buttons"
            android:text="@string/parking_lot_2_text"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/lot1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/lot1"
            android:layout_width="329dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_buttons"
            android:text="@string/parking_lot_1_text"
            android:textAlignment="center"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/homeText"
            app:layout_constraintHorizontal_bias="0.509" />

        <TextView
            android:id="@+id/homeText"
            android:layout_width="185dp"
            android:layout_height="45dp"
            android:fontFamily="sans-serif"
            android:text="@string/homeScreen"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/help_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/round_help_button"
            android:text="\?"
            tools:layout_editor_absoluteX="285dp"
            app:layout_constraintLeft_toRightOf="@id/homeText"
            app:layout_constraintBaseline_toBaselineOf="@+id/homeText" />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>